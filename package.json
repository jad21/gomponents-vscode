{
  "name": "gomponents-ext",
  "displayName": "gomponents-ext",
  "description": "Extension to enhance Go syntax support",
  "publisher": "jad21",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "scripts": {
    "package": "vsce package"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:go"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.convertHtmlToGomponent",
        "title": "Convert HTML to Gomponent"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/go.tmLanguage.json",
        "scopeName": "html-string.injection",
        "injectTo": [
          "source.go"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.html": "html"
        }
      }
    ],
    "keybindings": [
      {
        "command": "extension.convertHtmlToGomponent",
        "key": "ctrl+shift+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "jsdom": "^24.1.0"
  }
}
